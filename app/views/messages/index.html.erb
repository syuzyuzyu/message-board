<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <h3>メッセージ登録フォーム</h3>
  <div class="form-group">
    <label for="message_name" class="control-label col-md-1">名前:</label>
    <div class="col-sm-11">
      <%= f.text_field :name, :class => "form-control", :placeholder=>"名前" %>
    </div>
  </div>
  <div class="form-group">
    <label for="message_body" class="control-label col-md-1">内容:</label>
    <div class="col-sm-11">
      <%= f.text_area :body, :size => "50x10", :class => "form-control", :placeholder=>"内容" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>
