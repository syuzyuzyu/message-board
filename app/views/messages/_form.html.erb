<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <h3>メッセージ登録フォーム</h3>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label for="message_name" class="control-label col-md-1">名前:</label>
    <div class="col-sm-11">
      <%= f.text_field :name, :class => "form-control", :placeholder=>"名前" %>
    </div>
  </div>
  <div class="form-group">
    <label for="message_age" class="control-label col-md-1">年齢:</label>
    <div class="col-sm-11">
      <%= f.text_field :age, :class => "form-control", :placeholder=>"年齢" %>
    </div>
  </div>
  <div class="form-group">
    <label for="message_body" class="control-label col-md-1">内容:</label>
    <div class="col-sm-11">
      <%= f.text_area :body, :size => "50x10", :class => "form-control", :placeholder=>"内容" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>